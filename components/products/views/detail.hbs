                  {{#if next.isHas}}
                  <li class="page-item"><a href="/category/product/{{product.slug}}?pageComment={{next.page}}" aria-label="Next" class="page-link"><span
                        aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
                  {{/if}}
              </ul>
            </nav>
