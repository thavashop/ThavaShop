            <hr>
            <div class="social">
              <h4>Show it to your friends</h4>
              <p><a href="#" class="external facebook"><i class="fa fa-facebook"></i></a><a href="#"
                  class="external gplus"><i class="fa fa-google-plus"></i></a><a href="#" class="external twitter"><i
                    class="fa fa-twitter"></i></a><a href="#" class="email"><i class="fa fa-envelope"></i></a></p>
            </div>
          </div>
          <!-- /#post-content-->
          <div id="comment-form" class="box">
            <h4>Leave comment</h4>
            <form method="post" action="/category/post-comment" id="comment-form">
              {{#unless user}}
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="name">Name <span class="required">*</span></label>
                    <input id="name" type="text" class="form-control" name="name" required/>
                  </div>
                </div>
              </div>
              {{/unless}}
              <div class="row">
                <div class="col-md-12" id="submit-comment">
                  <div class="form-group">
                    <label for="comment">Comment <span class="required">*</span></label>
                    {{#if user}}
                    <input id="name" type="hidden" name="name" value="{{user.username}}">
                    {{/if}}
                    <input id="product-id" type="hidden" name="productId" value="{{product._id}}">
                    <input id="slug" type="hidden" name="slug" value="{{product.slug}}">
                    <input id="comment-page" type="hidden" name="page" value="{{page}}">
                    <input id="comment-content" type="text" class="form-control" id="comment" rows="4" name="content" required/>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 text-right">
                  <button type="submit" class="btn btn-primary"><i class="fa fa-comment-o"></i> Post comment</button>
                </div>
              </div>
            </form>
          </div>
          <!-- /#comment-form-->
          <div id="comments" class="box">
            <h4 id="comments-size">{{size}} comments</h4>
            <div id="comment-list">
              {{#each commentsToShow}}
              <div class="row comment">
                <div class="col-md-3 col-lg-2 text-center text-md-center">
                  <p><img src="/img/blog-avatar2.jpg" alt="" class="img-fluid rounded-circle"></p>
                </div>
                <div class="col-md-9 col-lg-10">
                  <h5>{{name}}</h5>
                  <p class="posted"><i class="fa fa-clock-o"></i> {{createAt}} ago</p>
                  <p>{{content}}</p>
                  <p class="reply"><a href="#submit-comment"><i class="fa fa-reply"></i> Reply</a></p>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
          <!-- /#comments-->
          <div class="pages">
            {{!-- <p class="loadMore"><a href="#" class="btn btn-primary btn-lg"><i class="fa fa-chevron-down"></i> Load
                more</a></p> --}}
            <nav aria-label="Page navigation example" class="d-flex justify-content-center">
              <ul class="pagination">
                  {{#if previous.isHas}}
                  <li class="page-item"><a href="/category/product/{{product.slug}}?pageComment={{previous.page}}" aria-label="Previous"
                      class="page-link"><span aria-hidden="true">«</span><span class="sr-only">Previous</span></a></li>
                  {{/if}}
                  {{#each pageBar}}
                  <li class="page-item {{active}}">
                    <a href="/category/product/{{../product.slug}}?pageComment={{page}}" class="page-link">{{page}}</a>
                  </li>
                  {{/each}}
                  {{!-- <li class="page-item active"><a href="#" class="page-link">1</a></li>
