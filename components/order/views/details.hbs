        </div>
        <div id="customer-order" class="col-lg-12">
          <div class="box">
            <h1>Order {{order._id}}</h1>
            <p class="lead">Your order was placed on <strong>{{order.date}}</strong> and is currently <strong>{{order.status}}</strong>.</p>
            <p class="text-muted">If you have any questions, please feel free to <a href="contact">contact us</a>,
              our customer service center is working for you 24/7.</p>
            <hr>
            <div class="table-responsive mb-4">
              <table class="table">
                <thead>
                  <tr>
                    <th colspan="2">Product</th>
                    <th>Quantity</th>
                    <th>Unit price</th>
                    <th colspan="2">Total</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each products }}
                  <tr>
                    <td><a href="/category/product/{{slug}}"><img src="{{image.[0]}}" alt="product image"></a></td>
                    <td><a href="/category/product/{{slug}}">{{name}}</a></td>
                    <td>{{quantity}}</td>
                    <td>${{price}}</td>
                    <td colspan="2">${{total}}</td>
                  </tr>
                  {{/each}}
                </tbody>
                <tfoot>
                  {{#with order}}
                  <tr>
                    <th colspan="5" class="text-right">Order subtotal</th>
                    <th>${{subtotal}}</th>
                  </tr>
                  <tr>
                    <th colspan="5" class="text-right">Shipping and handling</th>
                    <th>${{ship}}</th>
                  </tr>
                  <tr>
                    <th colspan="5" class="text-right">Tax</th>
                    <th>${{tax}}</th>
                  </tr>
                  <tr>
                    <th colspan="5" class="text-right">Total</th>
                    <th>${{total}}</th>
                  </tr>
                  {{/with}}
                </tfoot>
              </table>
            </div>
            <!-- /.table-responsive-->
            <div class="row addresses">
              {{#with order}}
              <div class="col-lg-6">
                <h2>Delivery type</h2>
                <p>{{delivery}}</p>
                <h2>Payment type</h2>
                <p>{{paymentType}}</p>
              </div>
              <div class="col-lg-6">
                <h2>Shipping address</h2>
                {{#with address}}
                <p>{{street}}<br>{{city}}<br>{{country}}</p>
                {{/with}}
              {{/with}}
              </div>
            </div>
          </div>
        </div>
      </div>
