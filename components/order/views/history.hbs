        <div id="customer-orders" class="col-lg-12">
          <div class="box">
            <h1>My orders</h1>
            <p class="lead">Your orders on one place.</p>
            <p class="text-muted">If you have any questions, please feel free to <a href="contact">contact us</a>,
              our customer service center is working for you 24/7.</p>
            <hr>
            <div class="table-responsive">
              {{#if orders}}
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Order</th>
                    <th>Date</th>
                    <th>Delivery type</th>
                    <th>SubTotal</th>
                    <th>Status</th>
                    <th>Payment type</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each orders }}
                  <tr>
                    <th>{{_id}}</th>
                    <td>{{date}}</td>
                    <td>{{delivery}}</td>
                    <td>${{subtotal}}</td>
                    <td><span class={{#if (equals status 'Delivered' )}}"badge badge-success" {{else}} {{#if (equals
                        status 'Not delivered' )}}"badge badge-warning" {{else}}"badge badge-info"{{/if}}
                        {{/if}}>{{status}}</span></td>
                    <td>{{paymentType}}</td>
                    <td><a href="/order/{{_id}}" class="btn btn-primary btn-sm">View</a></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
              {{else}}
              <h1>Looks like you haven't order anything yet.</h1>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
